{
    "COMMENT":"File to decide state transition logic termed policies",
    "policy_rules":{
        "default":[
            ["ask_name", "SAME_STATE"],
            ["pay_query", "SAME_STATE"],
            ["resource_query", "SAME_STATE"],
            ["sales_query", "init_sale"],
            ["weixin_query", "SAME_STATE"],
            ["deny", "SAME_STATE"],
            ["how_check_shebao_status", "SAME_STATE"],
            ["when_check_shebao_status", "SAME_STATE"],
            ["how_to_pai","SAME_STATE"],
            ["goodbye", "goodbye"],
            ["report_issue", "log_issue"],
            ["reset_chat", "init"],
            ["greet", "SAME_STATE"]
        ],
        "init": [
            ["sales_query", "init_sale"],
            ["purchase", "propose_plan"],
            ["affirm", "initplus"],
            ["deny", "goodbye"],
            ["greet", "init"]
        ],
        "initplus":[
            ["greet", "init"],
            ["sales_query", "init_sale"],
            ["purchase", "propose_plan"],
            ["deny", "goodbye"]
        ],
        "init_sale": [
            ["affirm", "propose_plan"],
            ["purchase", "propose_plan"]
        ],
        "propose_plan": [
            ["affirm", "confirm_plan"]
        ],
        "confirm_plan": [
            ["affirm", "payment"]
        ],
        "payment": [
            ["affirm", "inform_pai"],
            ["pay_query", "inform_pai"],
            ["sales_query", "inform_pai"],
            ["how_to_pai", "inform_pai"]
        ],
        "inform_pai": [
            ["affirm", "finished_pai"]
        ],
        "finished_pai": [
            ["affirm", "initplus"]
        ],
        "ask_if_issue": [
            ["affirm", "log_issue"],
            ["deny", "EXIT_POCKET_STATE"]
        ],
        "goodbye":[
            ["greet", "init"]
        ]
    },
    "forms":{
        "form_shebao":{
            "date":"startdate_shebao",
            "number":"base_amt_shebao"
        },
        "form_gongjijin":{
            "date":"startdate_gongjijin",
            "number": "base_amt_gongjijin"
        },
        "form_firsttime":{
            "yesno":"firsttime"
        },
        "form_salary":{
            "yesno":"salary"
        }
    }
}