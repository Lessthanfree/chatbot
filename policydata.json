{
    "COMMENT":"File to decide state transition logic termed policies",
    "policy_rules":{
        "default":[
            ["greet", "SAME_STATE"],
            ["ask_name", "SAME_STATE"],
            ["pay_query", "SAME_STATE"],
            ["sales_query", "init_sale"],
            ["deny", "GO_BACK_STATE"],
            ["how_check_shebao_status", "SAME_STATE"],
            ["goodbye", "goodbye"],
            ["report_issue", "log_issue"],
            ["reset_chat", "init"]
        ],
        "init": [
            ["deny", "init"],
            ["greet", "init"],
            ["sales_query", "init_sale"],
            ["purchase", "propose_plan"]
        ],
        "init_sale": [
            ["affirm", "propose_plan"],
            ["deny", "ask_if_issue"],
            ["purchase", "propose_plan"]
        ],
        "propose_plan": [
            ["affirm", "confirm_plan"],
            ["deny", "ask_if_issue"]
        ],
        "confirm_plan": [
            ["affirm", "payment"],
            ["deny", "ask_if_issue"]
        ],
        "payment": [
            ["affirm", "finish_sale"],
            ["deny", "ask_if_issue"]

        ],
        "ask_if_issue": [
            ["affirm", "log_issue"],
            ["deny", "EXIT_POCKET_STATE"]
        ]      
    },
    "forms":{
        "form_shebao":{
            "date":"startdate_shebao",
            "number":"base_amt_shebao"
        },
        "form_gongjijin":{
            "date":"startdate_gongjijin",
            "number": "base_amt_gongjijin"
        },
        "form_firsttime":{
            "yesno":"firsttime"
        },
        "form_salary":{
            "yesno":"salary"
        }
    }
}